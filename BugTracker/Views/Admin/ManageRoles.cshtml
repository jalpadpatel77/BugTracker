@using BugTracker.ViewModels
@using BugTracker.Helper
@model IEnumerable<UserProfileViewModel>

@{
    ViewBag.Title = "ManageRoles";
    var roleHelper = new UserRolesHelper();
}
    <style>
        html, body {
            height: 100%;
            font-family: 'Roboto', sans-serif;
            font-weight: 400;
            background: #ccc;
            background-repeat: no-repeat !important;
            background-size: cover !important;
            background-image: url('../../img/BackGround.png');
        }
        .form-control{
            font-size: 20px;
        }
        .btn {
            font-size: 25px;
        }
         .h4, h4 {
        font-size: 35px;
        }
    .product-status-wrap table td {
        padding: 9px 7px;
        border-top: 1px solid #152036;
        color: #fff;
        font-size: 20px;
        background: #1b2a47;
    }

    .product-status-wrap table th {
        padding: 9px 7px;
        border-top: 1px solid #152036;
        color: #fff;
        font-size: 20px;
        background: #2b426f;
    }
    .product-status-wrap h4 {
    font-size: 35px;
    color: #fff;
    margin-bottom: 20px;
}
    body {
    font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
    font-size: 25px;
    line-height: 1.42857143;
    color: #333;
    background-color: #fff;
}

        .dataTables_wrapper .dataTables_length, .dataTables_wrapper .dataTables_filter, .dataTables_wrapper .dataTables_info, .dataTables_wrapper .dataTables_processing, .dataTables_wrapper .dataTables_paginate {
            color: antiquewhite;
        }

        select {
            color: black;
            background-color: cadetblue;
        }
       
        h2 {
            color: aqua !important;
        }

        h3 {
            color: midnightblue !important;
        }
    </style>

<div class="product-status mg-b-30">
    <div class="container-fluid">
        <div class="row">
            <br /> <br /> <br /> <br /> <br /> <br />
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-status-wrap">
                    @Html.ActionLink("Back to DashBoard", "Dashboard", "Home")
                    <h4 class="title text-center"> Manage Roles For Multiple Users</h4>
                    @using (Html.BeginForm())
                    {
                        <div class=" form-group">
                            <div class="col-md-offset-2 col-md-5">

                                @Html.DropDownList("Users", null, "--Select Users--", htmlAttributes: new { @class = "form-control" })

                            </div>
                            <div class="col-md-offset-1 col-md-3">


                                @Html.DropDownList("RoleName", null, "--Select Role--", htmlAttributes: new { @class = "form-control" })


                            </div>
                        </div>
                        <div class=" form-group">
                            <div class="col-md-offset-2 ">
                                <input type="submit" value="Assign" class="btn btn-primary" />
                                @*<div class="col-md-12 ">

                                </div>*@
                            </div>
                        </div>

                    }

                    <hr />
                    <table class="table">
                        <tr>

                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LastName)
                            </th>

                            <th>
                                @Html.DisplayName("Role")
                            </th>

                        </tr>

                        @foreach (var user in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => user.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => user.FirstName)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => user.LastName)
                                </td>

                                <td>
                                    @roleHelper.ListUserRoles(user.Id).FirstOrDefault()
                                </td>


                            </tr>
                        }
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>


