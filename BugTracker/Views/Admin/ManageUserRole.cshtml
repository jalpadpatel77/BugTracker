@{
    ViewBag.Title = "ManageUserRole";
}
<style>
    html, body {
        height: 100%;
        font-family: 'Roboto', sans-serif;
        font-weight: 400;
        background: #ccc;
        background-repeat: no-repeat !important;
        background-size: cover !important;
        background-image: url('../../img/BackGround.png');
    }
     body {
    font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
    font-size: 25px;
    line-height: 1.42857143;
    color: #333;
    background-color: #fff;
}
    h4{
        color:midnightblue !important;
    }
    .form-control{
            font-size: 20px;
        }
        .btn {
            font-size: 25px;
        }
         .h4, h4 {
        font-size: 35px;
        }
    h3{
        color:midnightblue !important;
    }
</style>
<div class="container-fluid">
    <br />
    <div class="row">
        <br />
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <br />  <br />  <br />

            <h3 class="title text-center">Assign Role</h3>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("userId", (string)ViewBag.UserId)

                <div class="form-group">

                    <div class="col-md-4">
                        @Html.DropDownList("UserRole", null, "--Select Role--", htmlAttributes: new { @class = "form-control" })
                        @*@Html.ValidationMessageFor(model => model.ProjectId, "", new { @class = "text-danger" })*@
                    </div>

                </div>
                <div class="form-group">
                    <div class="col-md-4">

                        <input type="submit" value="Assign" class="btn btn-primary" />

                    </div>

                </div>
            }

        </div>
    </div><br/>
    <div class="col-md-6">
        @Html.ActionLink("Back to User Index", "UserIndex", "Admin")
    </div>
</div>
