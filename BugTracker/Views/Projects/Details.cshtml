@model BugTracker.Models.Project
@using BugTracker.Helper
@using BugTracker.ViewModels

@{
    ViewBag.Title = "Details";
}
    <style>
        html, body {
            height: 100%;
            font-family: 'Roboto', sans-serif;
            font-weight: 400;
            background: #ccc;
            background-repeat: no-repeat !important;
            background-size: cover !important;
            background-image: url('../../img/BackGround.png');
        }
        body {
    font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
    font-size: 25px;
    line-height: 1.42857143;
    color: #333;
    background-color: #fff;
}
         .form-control{
            font-size: 20px;
        }
        .btn {
            font-size: 25px;
        }
         .h4, h4 {
        font-size: 35px;
        }
        h3 {
            color: midnightblue !important;
        }
    </style>
<div class="container-fluid">
    <br /> <br />
    <div class="row">
        <br /> <br />
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <br /> <br />


            <h3 class="title text-center">Project Details</h3>

            <div>

                <hr />
                <dl class="dl-horizontal">
                   

                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>

                    @*<dt>
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>*@

                    <dd>
                        @Html.DisplayFor(model => model.Description)
                    </dd>

                    @*<dt>
                            @Html.DisplayNameFor(model => model.Created)
                        </dt>*@

                    <dd>
                        @Html.DisplayFor(model => model.Created)
                    </dd>

                </dl>
            </div>
            <p>
                @*@Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |*@
                @Html.ActionLink("Back to List", "Index")
            </p>
            @if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
            {
                using (Html.BeginForm("ManageProjectUsers", "Admin", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("projectId", Model.Id)
                    <div class="row">
                        <div class="col-md-4 text-center">
                            <h3>Project Manager </h3>
                            @Html.ListBox("ProjectManagers")
                        </div>


                        <div class="col-md-4 text-center">
                            <h3>Developers </h3>
                            @Html.ListBox("Developers")
                        </div>


                        <div class="col-md-4 text-center">
                            <h3>Submitter </h3>
                            @Html.ListBox("Submitters")
                        </div>


                        <div class="col-md-12 text-center">

                            <button type="submit" class=" btn btn-primary btn-lg">ASSIGN</button>
                        </div>
                    </div>

                }
            }
        </div>
    </div>
</div>



